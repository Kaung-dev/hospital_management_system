@model HospitalManagementSystem.Models.CashFlow

@{
    ViewData["Title"] = "Cash Flow";
}

<h2>Cash Flow Summary</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Appointments Cash</td>
            <td>@Model.AppointmentsCash</td>
        </tr>
        <tr>
            <td>Lab Cash</td>
            <td>@Model.LabCash</td>
        </tr>
        <tr>
            <td>Pharmacy Cash</td>
            <td>@Model.PharmacyCash</td>
        </tr>
        <tr>
            <th>Total Cash</th>
            <th>@Model.TotalCash</th>
        </tr>
    </tbody>
</table>

<h3>Test Update Cash Flow</h3>
<form asp-action="UpdateCash" method="post">
    <div class="form-group">
        <label for="type">Category:</label>
        <select id="type" name="type" class="form-control">
            <option value="appointments">Appointments</option>
            <option value="lab">Lab</option>
            <option value="pharmacy">Pharmacy</option>
        </select>
    </div>
    <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="number" id="amount" name="amount" step="0.01" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Update Cash</button>
</form>

<a class="btn btn-secondary mt-3" href="/">Back to Home</a>
