@model IEnumerable<HospitalManagementSystem.Models.Doctor>

<h2>Doctors</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Add New Doctor</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Experience</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.Experience</td>
                <td>@doctor.FkDeptNavigation?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@doctor.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
